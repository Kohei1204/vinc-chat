<div class="main-top">
  <div class="left-header">
    <div class="room-detail">
      <%= @room.name %>
    </div>
  </div>

  <div class="right-header">
      <div class="end-button">
        <%= link_to "Exit the room", room_path(@room), method: :delete %>
      </div>
  </div>

</div>

<div class="main-messages">
  <%= render partial: 'message', collection: @messages %>
</div>

